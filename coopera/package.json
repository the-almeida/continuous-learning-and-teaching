{
  "name": "coopera",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run services:up && next dev --turbopack",
    "services:up": "docker compose -f infra/docker-compose.yml up -d",
    "services:down": "docker compose -f infra/docker-compose.yml down",
    "services:stop": "docker compose -f infra/docker-compose.yml stop",
    "build": "next build",
    "start": "next start",
    "test": "npm run services:up && start-server-and-test \"npm run dev\" http://localhost:3000 \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "npx eslint . --max-warnings=0",
    "lint:eslint:fix": "npx eslint . --fix",
    "commit": "cz"
  },
  "dependencies": {
    "next": "15.5.7",
    "pg": "^8.17.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "start-server-and-test": "^2.1.3",
    "typescript": "^5",
    "typescript-eslint": "^8.53.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
